<!DOCTYPE html>
<html>
  <head>
    <title>Pentbox Honeypot Log Prettifier</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <div class="container">
      <div class="navbar-container">
        <nav class="nav navbar-light bg-faded">
            <%= link_to 'All logs', home_path, class: "navbar-brand" %>
            <%= link_to 'Hour',     hour_path, class: "nav-link"  %>
            <%= link_to 'Day',      day_path, class: "nav-link"  %>
            <%= link_to 'Week',     week_path, class: "nav-link"  %>
        </nav>
      </div>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
